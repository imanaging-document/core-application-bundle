{% extends basePath %}

{% block body %}
  <div class="container container-90 mt-4 mb-4">
    <h2 class="text-center">Liste des rôles</h2>

    <div class="card mt-2">
      <div class="card-body">
        <table class="table table-striped table-bordered text-center" id="table-roles">
          <thead>
          <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Type de rôle</th>
            <th><i class="fa fa-pencil"></i></th>
            <th><i class="fa fa-times"></i></th>
          </tr>
          </thead>
          <tbody>
          {% for role in roles %}
            <tr>
              <td>{{ role.id }}</td>
              <td>{{ role.libelle }}</td>
              <td>
                {% if role.id >= 1000 %}
                  <b>Local</b>
                {% else %}
                  <b>Dashboard</b>
                {% endif %}
              </td>
              <td>
                <a href="" class="btn btn-primary">
                  <i class="fa fa-pencil-square-o fa-fw"></i>Modifier ce rôle
                </a>
              </td>
              <td>
                {% if role.id >= 1000 %}
                  <a href="{{ path('core_application_role_remove', {id: role.id}) }}" class="btn btn-danger">
                    <i class="fa fa-times fa-fw"></i>Supprimer
                  </a>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>

        <hr>

        <h5>Ajouter un rôle</h5>
        <form action="{{ path('core_application_role_add') }}" method="post">
          <input type="hidden" name="basePath" value="{{ basePath }}">

          <div class="form-group">
            <label for="libelle">Nom du rôle</label>
            <input type="text" class="form-control" name="libelle" id="libelle">
          </div>

          <div class="text-center">
            <button type="submit" class="btn btn-primary">
              <i class="fa fa-plus-circle fa-fw"></i>Ajouter un nouveau rôle
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    $(document).ready(function () {
      $("#table-roles").dataTable({})
    })
  </script>
{% endblock %}