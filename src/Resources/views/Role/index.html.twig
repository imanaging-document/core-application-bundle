{% extends basePath %}

{% block body %}
  <div class="container container-90 mt-4 mb-4">
    <h2 class="text-center">Liste des rôles</h2>

    <div class="card mt-2">
      <div class="card-body">
        <div class="text-right">
          <a href="{{ path('core_application_user_synchroniser') }}" class="btn btn-primary">Nouveau rôle</a>
        </div>

        <table class="table table-striped table-bordered text-center" id="table-roles">
          <thead>
          <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>login</th>
            <th>Username</th>
            <th>Mail</th>
            <th>Role</th>
            <th>Utilisateur Zeus</th>
            <th>Utilisateur Core</th>
            <th>Actif</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
          {% for utilisateur in utilisateurs %}
            <tr data-utilisateur-id="{{ utilisateur.id }}">
              <td>{{ utilisateur.nom }}</td>
              <td>{{ utilisateur.prenom }}</td>
              <td>{{ utilisateur.login }}</td>
              <td>{{ utilisateur.username }}</td>
              <td>{{ utilisateur.mail }}</td>
              <td>{% if utilisateur.role != null %} {{ utilisateur.role.libelle }} {% endif %}</td>
              <td>
                {% if utilisateur.utilisateurZeus %}
                  <span class="text-success">&check;</span>
                {% else %}
                  <span class="text-danger">&times;</span>
                {% endif %}
              </td>
              <td>
                {% if utilisateur.utilisateurCore %}
                  <span class="text-success">&check;</span>
                {% else %}
                  <span class="text-danger">&times;</span>
                {% endif %}
              </td>
              <td>
                {% if utilisateur.actif %}
                  <span class="text-success">&check;</span>
                {% else %}
                  <span class="text-danger">&times;</span>
                {% endif %}
              </td>
              <td>
                {% if not utilisateur.utilisateurZeus %}
                  <a href="" class="btn btn-primary"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>

        <hr>

        <h5>Ajouter un rôle</h5>
        <form action="{{ path('core_application_role_add') }}" method="post">
          <div class="form-group">
            <label for="libelle">Nom du rôle</label>
            <input type="text" class="form-control" name="libelle" id="libelle">
          </div>

          <div class="text-center">
            <button type="submit" class="btn btn-primary">
              <i class="fa fa-plus-circle fa-fw"></i>Ajouter un nouveau rôle
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    $(document).ready(function () {
      $("#table-roles").dataTable({})
    })
  </script>
{% endblock %}