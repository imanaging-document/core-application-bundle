<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">
    <route id="core_application_user" path="/user" controller="imanaging_core_application.user_controller:indexAction">
    </route>

    <route id="core_application_user_synchroniser" path="/user/synchroniser" controller="imanaging_core_application.user_controller:synchroniserAction">
    </route>

    <route id="core_application_role" path="/role" controller="imanaging_core_application.role_controller:indexAction">
    </route>

    <route id="core_application_role_add" path="/role/add" controller="imanaging_core_application.role_controller:addRoleAction">
    </route>

    <route id="core_application_role_remove" path="/role/{id}/remove" controller="imanaging_core_application.role_controller:removeRoleAction">
    </route>

    <route id="core_application_role_edit" path="/role/{id}/edit" controller="imanaging_core_application.role_controller:editRoleAction">
    </route>

    <route id="core_application_role_save" path="/role/{id}/save" controller="imanaging_core_application.role_controller:saveRoleAction">
    </route>

    <route id="core_application_role_save_libelle" path="/role/{id}/save-libelle" controller="imanaging_core_application.role_controller:saveLibelleRoleAction">
    </route>

    <route id="core_application_role_edit_role_module" path="/role-module/edit" controller="imanaging_core_application.role_controller:editRoleModuleAction">
    </route>

    <route id="core_application_role_save_role_module" path="/role-module/{id}/save" controller="imanaging_core_application.role_controller:saveRoleModuleAction">
    </route>

    <route id="core_application_menu_get_first_sous_module_redirect" path="/menu/module/{id}/get-first-sous-module-redirect"
           controller="imanaging_core_application.menu_controller:getFirstSousModuleRedirectAction">
    </route>
</routes>